.navbar-right(ng-controller='navBarCtrl')
    form.navbar-form(ng-hide='identity.isAuthenticated()')
        .form-group
        input.form-control(placeholder='Email',ng-model='username')
        .form-group
        input.form-control(type='password',placeholder='Password',ng-model='password')
        button.btn.btn-primary(ng-disabled='',ng-click='signin(username,password)') Sign In
    .nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
        li.dropdown
            a.dropdown-toggle(href="",data-toggle="dropdown")
              | {{identity.currentUser.firstName +" "+ identity.currentUser.secondName}}
              b.caret
            ul.dropdown-menu
               li(ng-show="identity.currentUser.isAdmin()")
                  a(href="/admin/users/") Users Admin
               li
                  a(href="",ng-click="logout()") Sign Out